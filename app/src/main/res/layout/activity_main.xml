<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.taro.videoapp.MainActivity">

    <TextView
        android:id="@+id/shader_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shader image" />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_below="@+id/shader_image"
        android:id="@+id/share_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shader camera" />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_below="@+id/share_camera"
        android:id="@+id/gpu_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gpu camera" />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_below="@+id/gpu_camera"
        android:id="@+id/record_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="record media" />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_below="@+id/record_media"
        android:id="@+id/media_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="media image" />

</RelativeLayout>
